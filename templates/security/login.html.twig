{% extends "base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block body %}
    
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 mt-5">
            <h1>Connexion</h1>
            {% if error %}
                <div class="text-danger">Erreur : votre login et/ou votre mot de passe sont incorrects</div>
            {% endif %}
            <form action="{{ path('security_login')}}" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Adresse Email" required name="_username" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
    
    
{% endblock %}