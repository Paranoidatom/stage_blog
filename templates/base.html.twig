<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Blog - {% block title %}Bienvenue{% endblock %}</title>
        <link rel="stylesheet" href="/assets/index.css">
        <link rel="stylesheet" href="https://bootswatch.com/4/cyborg/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="/assets/index.js"></script>
        <script src="https://cdn.rawgit.com/nnattawat/flip/master/dist/jquery.flip.min.js"></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body style="{% if app.user %} background-color:rgb(20,20,20); {% else %} background-color:rgb(0,0,0); {% endif %}" onload="startFlip()">
        <nav class="navbar fixed-top navbar-expand-lg {% if app.user %} navbar-white bg-white {% else %} navbar-dark bg-dark {% endif %}">
            <a class="navbar-brand" href="{{ path('home') }}">
                <img src="https://cdn.filestackcontent.com/l0TGe3v6TEuuPruu9MUh" alt="" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {% if app.user %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('blog') }}">Articles <span class="sr-only">(current)</span></a>
                        </li>
                    {% endif %}
                    {% if app.user is not null %}
                        {% for role in app.user.roles | filter(role => role == 'ROLE_ADMIN') -%}
                            <li class="nav-item ">
                                <a class="nav-link" href="{{ path('security_registration') }}">Inscrire un nouvel utilisateur<span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('blog_create') }}">Créer un article</a>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
                <ul class="navbar-nav align-items-center">
                    {% if not app.user %}
                        <li class="nav-item nav-inline">
                            <a href="{{ path('security_login') }}" class="btn btn-danger">Connexion</a>
                        </li>
                    {% else %}
                        <span class="mr-3">Bonjour {{ app.user.username }}</span> 
                        <a href="{{ path('security_logout') }}" class="btn btn-danger">Déconnexion</a>                    
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="col-12" style="height: 100px;"></div>
        <div class="container">
            {% block body %}{% endblock %}
            {{ include('blog/footer.html.twig') }}
        </div>
    </body>
</html>
